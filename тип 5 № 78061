def SS(N,b):
    s = ''
    while N > 0:
        s+= str(N%b)
        N //= b
    return s[::-1]

for N in range(0,1000000):
    s=SS(N,3)
    if s.count('1')% 3 == 0:
        s+= '112'[2:]
    else:
        s+= str(SS(s.count('1'),3))
    R = int(s,3)
    if R % 2 == 0 and R>702:
        print(R)
        break
